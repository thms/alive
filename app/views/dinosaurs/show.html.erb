<p id="notice"><%= notice %></p>

<%= render 'dinosaurs/data', dinosaur: @dinosaur %>
<p>
  <strong>Possible Hybrids:</strong>
  <%= @dinosaur.possible_hybrid_names %>
</p>

<p>
  <%= @graph.html_safe %>
</p>

<p>
  <strong>Cost to next level (<%= @next_level%>):</strong><br />
  <div style="display:none;" >
  Coins: <%= @cost[:coins] %><br />
  DNA: <%= @cost[:dna] %><br />
  Fusions: <%= @cost[:fusions] %>
  </div>
<table>
  <thead>
    <td></td>
    <% @cost[:coins].each do |key, value| %>
      <td><%= key %></td>
    <% end %>
  </thead>
  <% @cost.each do |key, cost| %>
    <tr>
      <td><%= key.to_s.capitalize %></td>
      <% cost.each do |key, value| %>
        <td><%= value.to_i > 0 ? value : '' %></td>
      <% end %>
    </tr>
  <% end %>
</table>
</p>
<%= link_to 'Edit', edit_dinosaur_path(@dinosaur) %> |
<%= link_to 'Back', dinosaurs_path %>
